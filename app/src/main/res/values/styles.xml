<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="noElements">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/font_date</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="eventLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="eventDay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_date</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="eventBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/background_event</item>
    </style>

    <style name="calendarBackground" parent="eventBackground" />

    <style name="eventColor">
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/background_color</item>
    </style>

    <style name="eventTextLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="eventTextLayoutAllDay" parent="eventTextLayout">
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="calendarTextLayout" parent="eventTextLayout">
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="eventTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="eventTitleAllDay" parent="eventTitle">
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="calendarTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="accountName" parent="calendarTitle" />

    <style name="eventDuration">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="toolbarItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/font_header</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
